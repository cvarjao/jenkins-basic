{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "jenkins",
        "creationTimestamp": null
    },
    "parameters":[
        {
            "name": "NAME",
            "displayName": "Name",
            "description": "A name used for all objects",
            "value": "jenkins-atomic",
            "required": true
        },{
            "name": "VERSION",
            "displayName": "version",
            "description": "A version used for the image tags",
            "value": "v1.0.0",
            "required": true
        },{
            "name": "GITHUB_USERNAME",
            "displayName": "GITHUB_USERNAME",
            "description": "GITHUB_USERNAME",
            "value": "cvarjao",
            "required": true
        },{
            "name": "ROUTE_HOST",
            "displayName": "ROUTE_HOST",
            "description": "ROUTE_HOST",
            "value": "jenkins-atomic-csnr-devops-lab-tools.pathfinder.gov.bc.ca",
            "required": true
        },{
            "name": "ROUTE_PATH",
            "displayName": "ROUTE_PATH",
            "description": "ROUTE_PATH",
            "value": "/",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "Secret",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}-slave-user",
                "annotations": {
                    "as-copy-of": "template.${NAME}-slave-user"
                }
            },
            "stringData": {
                "metadata.name": "${NAME}-slave-user",
                "username": "jenkins-slave"
            },
            "type": "kubernetes.io/basic-auth"
        },
        {
            "kind": "Secret",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}-github",
                "annotations":{
                    "as-copy-of": "template.${NAME}-github"
                }
            },
            "stringData": {
                "metadata.name": "${NAME}-github",
                "username": "${GITHUB_USERNAME}"
            },
            "type": "kubernetes.io/basic-auth"
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                }
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "annotations": {
                    "volume.beta.kubernetes.io/storage-class": "gluster-file",
                    "volume.beta.kubernetes.io/storage-provisioner": "kubernetes.io/glusterfs"
                }
            },
            "spec": {
                "accessModes": [
                    "ReadWriteMany"
                ],
                "resources": {
                    "requests": {
                        "storage": "10Gi"
                    }
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "ServiceAccount",
            "metadata": {
                "annotations": {
                    "serviceaccounts.openshift.io/oauth-redirectreference.jenkins": "{\"kind\":\"OAuthRedirectReference\",\"apiVersion\":\"v1\",\"reference\":{\"kind\":\"Route\",\"name\":\"${NAME}\"}}"
                },
                "name": "${NAME}"
            }
        },
        {
            "apiVersion": "v1",
            "groupNames": null,
            "kind": "RoleBinding",
            "metadata": {
                "name": "${NAME}_edit"
            },
            "roleRef": {
                "name": "edit"
            },
            "subjects": [
                {
                    "kind": "ServiceAccount",
                    "name": "${NAME}"
                }
            ]
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "timeoutSeconds": 600
                    },
                    "resources": {},
                    "activeDeadlineSeconds": 21600
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": ["jenkins"],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${NAME}:${VERSION}"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "revisionHistoryLimit": 10,
                "test": false,
                "selector": {
                    "deploymentconfig": "${NAME}"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "deploymentconfig": "${NAME}"
                        }
                    },
                    "spec": {
                        "volumes": [
                            {
                                "name": "jenkins-home",
                                "persistentVolumeClaim": {
                                    "claimName": "${NAME}"
                                }
                            },
                            {
                                "name": "pod-metadata",
                                "downwardAPI":{
                                    "items":[
                                        {"name": "name", "fieldRef": {"fieldPath": "metadata.name"}, "path": "name"},
                                        {"name": "namespace", "fieldRef": {"fieldPath": "metadata.namespace"}, "path": "namespace"},
                                        {"name": "labels", "fieldRef": {"fieldPath": "metadata.labels"}, "path": "labels"},
                                        {"name": "annotations", "fieldRef": {"fieldPath": "metadata.annotations"}, "path": "annotations"}
                                    ]
                                }
                            },
                            {
                                "name": "jenkins-slave-user",
                                "secret": {
                                    "secretName": "${NAME}-slave-user",
                                    "defaultMode": 420
                                }
                            },
                            {
                                "name": "github",
                                "secret": {
                                    "secretName": "${NAME}-github",
                                    "defaultMode": 420
                                }
                            }
                        ],
                        "containers": [
                            {
                                "name": "jenkins",
                                "image": " ",
                                "command":[
                                    "/usr/local/bin/container-entrypoint",
                                    "/usr/local/bin/jenkins-run"
                                ],
                                "ports": [
                                    {
                                        "containerPort": 50000,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "JAVA_TOOL_OPTIONS",
                                        "value": "-XX:+UnlockExperimentalVMOptions -XX:+UseCGroupMemoryLimitForHeap -XX:MaxRAMFraction=4   -XX:MaxHeapFreeRatio=20 -XX:MinHeapFreeRatio=10"
                                    },{
                                        "name": "JENKINS_URL",
                                        "value": "https://${ROUTE_HOST}${ROUTE_PATH}"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "name": "pod-metadata",
                                        "mountPath": "/var/run/pod"
                                    },
                                    {
                                        "name": "jenkins-slave-user",
                                        "readOnly": true,
                                        "mountPath": "/run/secrets/jenkins-slave-user"
                                    },
                                    {
                                        "name": "github",
                                        "readOnly": true,
                                        "mountPath": "/run/secrets/github"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "cpu": "2",
                                        "memory": "2Gi"
                                    },
                                    "requests": {
                                        "cpu": "1",
                                        "memory": "2Gi"
                                    }
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "terminationMessagePolicy": "File",
                                "imagePullPolicy": "IfNotPresent"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {},
                        "schedulerName": "default-scheduler",
                        "serviceAccountName": "${NAME}",
                        "serviceAccount": "${NAME}"
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}-slave-build",
                "creationTimestamp": null
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "timeoutSeconds": 600
                    },
                    "resources": {},
                    "activeDeadlineSeconds": 21600
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": ["jenkins"],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${NAME}:${VERSION}"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "revisionHistoryLimit": 10,
                "test": false,
                "selector": {
                    "deploymentconfig": "${NAME}-slave-build"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "deploymentconfig": "${NAME}-slave-build"
                        }
                    },
                    "spec": {
                        "volumes": [
                            {
                                "name": "jenkins-home",
                                "persistentVolumeClaim": {
                                    "claimName": "${NAME}"
                                }
                            },
                            {
                                "name": "pod-metadata",
                                "downwardAPI":{
                                    "items":[
                                        {"name": "name", "fieldRef": {"fieldPath": "metadata.name"}, "path": "name"},
                                        {"name": "namespace", "fieldRef": {"fieldPath": "metadata.namespace"}, "path": "namespace"},
                                        {"name": "labels", "fieldRef": {"fieldPath": "metadata.labels"}, "path": "labels"},
                                        {"name": "annotations", "fieldRef": {"fieldPath": "metadata.annotations"}, "path": "annotations"}
                                    ]
                                }
                            },
                            {
                                "name": "jenkins-slave-user",
                                "secret": {
                                    "secretName": "${NAME}-slave-user",
                                    "defaultMode": 420
                                }
                            },
                            {
                                "name": "github",
                                "secret": {
                                    "secretName": "${NAME}-github",
                                    "defaultMode": 420
                                }
                            }
                        ],
                        "containers": [
                            {
                                "name": "jenkins",
                                "image": " ",
                                "command":[
                                    "bash",
                                    "-c",
                                    "cd $HOME && java -XshowSettings:vm -version && exec java -jar /usr/lib/jenkins/swarm-client.jar -name \"$(cat /etc/hostname)\" -deleteExistingClients -fsroot \"$JENKINS_HOME/$(cat /etc/hostname)\" -master http://jenkins-atomic:8080 -disableSslVerification -username  \"$(cat /var/run/secrets/jenkins-slave-user/username)\" -passwordFile /var/run/secrets/jenkins-slave-user/password -description \"$(cat /etc/hostname)\" -executors 2 -labels 'Linux rhel rhel7 build test deploy light' -mode 'normal' -retry 10 -tunnel jenkins-atomic:50000 -disableClientsUniqueId"
                                ],
                                "ports": [
                                    {
                                        "containerPort": 50000,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "JENKINS_MASTER_SERVICE",
                                        "value": "${NAME}"
                                    },
                                    {
                                        "name": "JAVA_TOOL_OPTIONS",
                                        "value": "-XX:+UnlockExperimentalVMOptions -XX:+UseCGroupMemoryLimitForHeap -XX:MaxRAMFraction=5 -XX:MaxHeapFreeRatio=20 -XX:MinHeapFreeRatio=10"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "name": "pod-metadata",
                                        "mountPath": "/var/run/pod"
                                    },
                                    {
                                        "name": "jenkins-slave-user",
                                        "readOnly": true,
                                        "mountPath": "/run/secrets/jenkins-slave-user"
                                    },
                                    {
                                        "name": "github",
                                        "readOnly": true,
                                        "mountPath": "/run/secrets/github"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "cpu": "1",
                                        "memory": "2Gi"
                                    },
                                    "requests": {
                                        "cpu": "500m",
                                        "memory": "2Gi"
                                    }
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "terminationMessagePolicy": "File",
                                "imagePullPolicy": "IfNotPresent"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {},
                        "schedulerName": "default-scheduler",
                        "serviceAccountName": "${NAME}",
                        "serviceAccount": "${NAME}"
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    },
                    {
                        "name": "50000-tcp",
                        "protocol": "TCP",
                        "port": 50000,
                        "targetPort": 50000
                    }
                ],
                "selector": {
                    "deploymentconfig": "${NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null
            },
            "spec": {
                "host": "${ROUTE_HOST}",
                "path": "${ROUTE_PATH}",
                "to": {
                    "kind": "Service",
                    "name": "${NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                },
                "tls": {
                    "termination": "edge"
                },
                "wildcardPolicy": "None"
            }
        }
    ]
}
