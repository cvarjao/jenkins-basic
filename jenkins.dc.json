{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "jenkins",
        "creationTimestamp": null
    },
    "parameters":[
        {
            "name": "NAME",
            "displayName": "Name",
            "description": "A name used for all objects",
            "value": "jenkins-atomic",
            "required": true
        },{
            "name": "VERSION",
            "displayName": "version",
            "description": "A version used for the image tags",
            "value": "v1.0.0",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                }
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "annotations": {
                    "volume.beta.kubernetes.io/storage-class": "gluster-file",
                    "volume.beta.kubernetes.io/storage-provisioner": "kubernetes.io/glusterfs"
                }
            },
            "spec": {
                "accessModes": [
                    "ReadWriteMany"
                ],
                "resources": {
                    "requests": {
                        "storage": "10Gi"
                    }
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "ServiceAccount",
            "metadata": {
                "annotations": {
                    "serviceaccounts.openshift.io/oauth-redirectreference.jenkins": "{\"kind\":\"OAuthRedirectReference\",\"apiVersion\":\"v1\",\"reference\":{\"kind\":\"Route\",\"name\":\"${NAME}\"}}"
                },
                "name": "${NAME}"
            }
        },
        {
            "apiVersion": "v1",
            "groupNames": null,
            "kind": "RoleBinding",
            "metadata": {
                "name": "${NAME}_edit"
            },
            "roleRef": {
                "name": "edit"
            },
            "subjects": [
                {
                    "kind": "ServiceAccount",
                    "name": "${NAME}"
                }
            ]
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "timeoutSeconds": 600
                    },
                    "resources": {},
                    "activeDeadlineSeconds": 21600
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": ["jenkins"],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${NAME}:${VERSION}"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "revisionHistoryLimit": 10,
                "test": false,
                "selector": {
                    "deploymentconfig": "${NAME}"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "deploymentconfig": "${NAME}"
                        }
                    },
                    "spec": {
                        "volumes": [
                            {
                                "name": "jenkins-home",
                                "persistentVolumeClaim": {
                                    "claimName": "${NAME}"
                                }
                            }
                        ],
                        "containers": [
                            {
                                "name": "jenkins",
                                "image": " ",
                                "command":[
                                    "/usr/local/bin/jenkins-run"
                                ],
                                "ports": [
                                    {
                                        "containerPort": 50000,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "JAVA_OPTS",
                                        "value": "-XX:+PrintFlagsFinal -XX:+UnlockExperimentalVMOptions -XX:+UseCGroupMemoryLimitForHeap -Djenkins.install.runSetupWizard=false"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "cpu": "1",
                                        "memory": "1Gi"
                                    },
                                    "requests": {
                                        "cpu": "1",
                                        "memory": "1Gi"
                                    }
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "terminationMessagePolicy": "File",
                                "imagePullPolicy": "IfNotPresent"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {},
                        "schedulerName": "default-scheduler",
                        "serviceAccountName": "${NAME}",
                        "serviceAccount": "${NAME}"
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}-jnlp",
                "creationTimestamp": null
            },
            "spec": {
                "ports": [
                    {
                        "name": "agent",
                        "protocol": "TCP",
                        "port": 50000,
                        "targetPort": 50000
                    }
                ],
                "selector": {
                    "deploymentconfig": "${NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    },
                    {
                        "name": "50000-tcp",
                        "protocol": "TCP",
                        "port": 50000,
                        "targetPort": 50000
                    }
                ],
                "selector": {
                    "deploymentconfig": "${NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                },
                "tls": {
                    "termination": "edge"
                },
                "wildcardPolicy": "None"
            }
        }
    ]
}
